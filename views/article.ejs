<!-- To show individual articles of any category -->
<% if(article != null ) { %>

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- article.name %></li>
    </ol>
  </nav>


  
    <!-- -->
    <div  class="text-center mb-4">
      <img src="/img/<%- article.image %>" style="top: 20px; bottom: 20px; height:35rem; width: 50rem;" alt="<%- article.name %>" loading="lazy">
    </div>
 

    <div class="col-12 col-md-8 mt-4">
      <div class="row">
        <div class="col-12 pt-1"><h1><%- article.name %></h1></div>
        <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- article.category %></div> <!-- bi-> bootstrap icon-->
        <div class="col-12" style="white-space: pre-line;">  <!-- White space:Tells how to wrap lines and collapse whitespace.   pre-wrap : Sequences of white space are preserved. Lines are broken at newline characters-->
          <h4>Description</h4>
          <%- article.description %>
        </div>
      </div>

      <div class="row pt-4">
        <div class="col-12">
          <h4>Contents</h4>
         <div style="white-space: pre-line" class="pb-5 mb-5">
          <%- article.contents %>
        </div>
        </div>
      </div>
   
 
<% } else { %>
  <p>No item found.</p>
<% } %>